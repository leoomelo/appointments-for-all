<p style="color: green"><%= notice %></p>

<% content_for :title, "Appointments" %>

<h1>Appointments</h1>

<div id="appointments">
  <% if @appointments.any? %>
    <% @appointments.each do |appointment| %>
      <%= render appointment %>
      <p>
        <%= link_to "Show this appointment", appointment %>
      </p>
    <% end %>
  <% else %>
    <p style="color: gray;"><em>There's no appointments available.</em></p>
  <% end %>
</div>

<%= link_to "New appointment", new_appointment_path %>
